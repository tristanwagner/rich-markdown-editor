{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "types": ["react", "jest"],
    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules/**/*"]
}
